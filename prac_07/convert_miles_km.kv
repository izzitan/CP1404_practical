BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_name
            text: '34.0'
            font_size: 46
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
                on_press: app.handle_convert()
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                on_press: app.handle_convert()
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Convert miles to km'
            on_press: app.handle_convert()
        Label:
            text: 'Convert miles to kilometres'
            id: output_label
            color: 	(1, 1 , 255, 1)